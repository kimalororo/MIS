<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Книжный магазинчик</title>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            display: flex;
            height: 100vh;
        }

        aside {
            width: 250px;
            background-color: #f8f9fa;
            padding: 20px;
            border-right: 1px solid #ddd;
        }

            aside .logo {
                display: block;
                margin-bottom: 30px;
                text-align: center;
            }

            aside ul {
                list-style: none;
                padding: 0;
            }

                aside ul li {
                    margin: 10px 0;
                }

                    aside ul li a {
                        text-decoration: none;
                        color: #000;
                        display: block;
                        padding: 10px;
                        border-radius: 5px;
                    }

                        aside ul li a:hover {
                            background-color: #e9ecef;
                        }

        main {
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <aside>
        @if (User.Identity.IsAuthenticated)
        {
            <h2>Магазинчик</h2>
            <ul>
                <li><a href="@Url.Action("FirstViewMethod", "Books")">Книги</a></li>
                <li><a href="@Url.Action("ShowShelves", "Shelves")">Стеллажи</a></li>
                <li><a href="@Url.Action("ShowDeliveries", "Deliveries")">Поставки</a></li>
                @if (User.IsInRole("admin"))
                {

                    <li><a href="@Url.Action("ShowUsers", "Users")">Пользователи</a></li>
                }
            </ul>
        }
            <hr />
            <div class="user-info">
                @if (User.Identity.IsAuthenticated)
                {
                    var authCookie = Request.Cookies[FormsAuthentication.FormsCookieName];
                    if (authCookie != null)
                    {
                        var authTicket = FormsAuthentication.Decrypt(authCookie.Value);
                        var username = authTicket.Name;  
                        var userRole = authTicket.UserData;  

                        <p><strong>@username</strong></p>
                        <p>(@userRole)</p>

                        <a href="@Url.Action("Logout", "Books")" class="btn btn-outline-danger btn-sm w-100">Выйти</a>
                    }
                }
                else
                {
                    <p>Вы не авторизованы</p>
                    <a href="@Url.Action("Login", "Books")" class="btn btn-outline-success btn-sm w-100">Войти</a>
                }
            </div>
        </aside>

    <main>
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
